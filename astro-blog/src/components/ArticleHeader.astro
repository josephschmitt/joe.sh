---
import Logo from './Logo.astro';

interface Props {
  title: string;
  subtitle?: string;
  heroImage?: string;
  theme?: string;
}

const { title, subtitle, heroImage, theme } = Astro.props;

const headerClass = [
  theme || '',
  heroImage ? 'hero' : ''
].filter(Boolean).join(' ');

const headerStyle = heroImage 
  ? `background-image: url(${heroImage});` 
  : '';
---

<header class={headerClass} style={headerStyle}>
  <Logo />
  
  <hgroup class={heroImage ? '' : 'column'}>
    <h1>{title}</h1>
    {subtitle && <h2>{subtitle}</h2>}
  </hgroup>
</header>
